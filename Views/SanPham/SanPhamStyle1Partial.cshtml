@using WebSiteBanHang.Models
@model IEnumerable<SanPham>
    

<div class="content-top">
    <h1>@Model.First().LoaiSanPham.TenLoai Mới Nhất</h1>
    <div class="grid-in">
        @foreach (var item in Model.Take(3))
        {

            <div class="col-md-4 grid-top">
                <a href="@Url.RouteUrl("XemChiTiet", new {@id=item.MaSP,@tensp=item.TenSP })" class="b-link-stripe b-animate-go  thickbox">
                    <img class="img-responsive" src="@Url.Content("~/Content/HinhSP/"+ item.HinhAnh)" alt="HinhAnhSP">
                    <div class="b-wrapper">
                        <h3 class="b-animate b-from-left    b-delay03 " style="text-align:left;font-size:15pt;">
                            <span style="text-align:left; position:absolute;top:2%; left:2%; font-size:20pt;">@Html.Raw(item.CauHinh)</span>
                        </h3>
                    </div>
                </a>


                <p><a href="single.html">@item.TenSP</a></p>
            </div>





        }
    </div>
    <div class="clearfix"> </div>
</div>
