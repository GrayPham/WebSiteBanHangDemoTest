
@model IEnumerable<WebSiteBanHang.Models.SanPham>


<div class="content-top-bottom">
    <h2>Máy Tính Xách Tay</h2>
    <div class="col-md-8 men">
        <a href="single.html" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhSP/" + Model.ElementAt(0).HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in   b-delay03 ">
                    <span>@Html.Raw(Model.ElementAt(0).CauHinh)</span>
                </h3>
            </div>
        </a>

        <h3>@Html.Raw(Model.ElementAt(0).TenSP)</h3>
        <br />

    </div>
