                    <h3 class="b-animate b-from-top top-in   b-delay03 ">
                        <span style="text-align:left; position:absolute;top:5%; left:2%; font-size:20pt;">@Html.Raw(Model.ElementAt(1).CauHinh)</span>
                    </h3>
                </div>
            </a>
            <h3>@Html.Raw(Model.ElementAt(1).TenSP)</h3>
            <br />
        </div>
        <div class="col-md">
